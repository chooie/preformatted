    "karma": "2.0.0",
    "karma-commonjs": "1.0.0",
    "karma-js_to_html-preprocessor": "0.0.11",
    "karma-mocha": "1.3.0",
    "lint-staged": "7.0.4",
    "mocha": "5.0.5",
    "nodemon": "1.17.3",
    "prettier": "1.11.1",
    "selenium-webdriver": "4.0.0-alpha.1",
    "shelljs": "0.8.1",
